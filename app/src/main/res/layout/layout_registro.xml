<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_nombre_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="15dp"
        android:textColor="#04285C"/>

    <EditText
        android:id="@+id/edit_nombre_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="su nombre"
        android:inputType="text" />

    <TextView
        android:id="@+id/text_apellidos_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellidos:"
        android:textSize="15dp"
        android:textColor="#04285C"/>

    <EditText
        android:id="@+id/edit_apellidos_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="sus pellidos"
        android:inputType="text" />

    <TextView
        android:id="@+id/text_tfno_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número de Teléfono:"
        android:textSize="15dp"
        android:textColor="#04285C" />

    <EditText
        android:id="@+id/edit_tfno_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="su nombre"
        android:inputType="phone" />

    <TextView
        android:id="@+id/text_mail_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dirección Correo Electrónico:"
        android:textSize="15dp"
        android:textColor="#04285C"/>

    <EditText
        android:id="@+id/edit_mail_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="su direccion de correo"
        android:inputType="text" />

    <TextView
        android:id="@+id/text_otros_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTROS:"
        android:textSize="15dp"
        android:textColor="#04285C"/>

    <EditText
        android:id="@+id/edit_otros_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="otras consideraciones"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton_aceptar_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/boton_aceptar_registro"
            android:onClick="aceptarRegistro"
            android:text="@string/aceptar" />

        <Button
            android:id="@+id/boton_cancelar_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@drawable/boton_aceptar_registro"
            android:onClick="cancelarRegistro"
            android:text="@string/cancelar" />


    </LinearLayout>

    <TextView
        android:id="@+id/respuesta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/respuesta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/respuesta3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/respuesta4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/respuesta5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>