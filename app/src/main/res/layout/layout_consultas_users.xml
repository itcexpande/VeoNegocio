<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView_altas_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_consulta_correo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:text="Correo electrónico:" />

                <TextView
                    android:id="@+id/tv_consulta_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_consulta_correo"
                    android:layout_marginTop="25dp"
                    android:text="Contraseña:" />


                <TextView
                    android:id="@+id/tv_consulta_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_consulta_password"
                    android:layout_marginTop="25dp"
                    android:text="Nombre:" />


                <TextView
                    android:id="@+id/tv_consulta_apellidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_consulta_nombre"
                    android:layout_marginTop="25dp"
                    android:text="Apellidos:" />

                <TextView
                    android:id="@+id/tv_consulta_telefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_consulta_apellidos"
                    android:layout_marginTop="25dp"
                    android:text="Teléfono:" />


                <TextView
                    android:id="@+id/tv_consulta_provincia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_consulta_telefono"
                    android:layout_marginTop="25dp"
                    android:text="Provincia:" />


                <TextView
                    android:id="@+id/tv_consulta_sector_actividad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_consulta_provincia"
                    android:layout_marginTop="20dp"
                    android:text="Sector Actividad:" />


                <TextView
                    android:id="@+id/tv_consulta_plan_inversion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_consulta_sector_actividad"
                    android:layout_marginTop="20dp"
                    android:text="Plan Inversion:" />


                <TextView
                    android:id="@+id/tv_consulta_cuando_empezar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_consulta_plan_inversion"
                    android:layout_marginTop="15dp"
                    android:text="Cuando Empezar:" />

                <TextView
                    android:id="@+id/tv_consulta_perfil_profesional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_consulta_cuando_empezar"
                    android:layout_marginTop="15dp"
                    android:text="Perfil Profesional:" />

            </RelativeLayout>


        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView2_altas_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_consulta_correo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:hint="correo electrónico"
                    android:inputType="textEmailAddress" />


                <EditText
                    android:id="@+id/et_consulta_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/et_consulta_correo"
                    android:hint="contraseña"
                    android:inputType="textPassword" />


                <EditText
                    android:id="@+id/et_consulta_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/et_consulta_password"
                    android:hint="nombre"
                    android:inputType="textCapWords"
                    android:maxLength="100" />


                <EditText
                    android:id="@+id/et_consulta_apellidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/et_consulta_nombre"
                    android:hint="apellidos"
                    android:inputType="textCapWords"
                    android:maxLength="100" />


                <EditText
                    android:id="@+id/et_consulta_telefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/et_consulta_apellidos"
                    android:hint="teléfono"
                    android:inputType="text|phone"
                    android:maxLength="20" />


                <Spinner
                    android:id="@+id/sp_consulta_provincia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/et_consulta_telefono"
                    android:layout_marginTop="10dp"></Spinner>

                <Spinner
                    android:id="@+id/sp_consulta_sector_actividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/sp_consulta_provincia"
                    android:layout_marginTop="10dp"></Spinner>

                <Spinner
                    android:id="@+id/sp_consulta_plan_inversion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/sp_consulta_sector_actividad"
                    android:layout_marginTop="10dp"></Spinner>

                <Spinner
                    android:id="@+id/sp_consulta_cuando_empezar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/sp_consulta_plan_inversion"
                    android:layout_marginTop="10dp"></Spinner>

                <Spinner
                    android:id="@+id/sp_consulta_perfil_profesional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/sp_consulta_cuando_empezar"
                    android:layout_marginTop="10dp"></Spinner>

            </RelativeLayout>

        </ScrollView>

        <Button
            android:id="@+id/boton_consulta_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_consulta_situacion_profesional"
            android:layout_marginTop="100dp"
            android:onClick="consultaUsuario2"
            android:text="MODIFICAR USUARIO" />

    </LinearLayout>

</LinearLayout>
